@model AnaliseCreditoViewModel

@{
    ViewData["Title"] = "Buscar Cooperado";
}
@section Styles  {
    <link href="@Url.Content("~/css/IndexStyleSheet.css")" rel="stylesheet" type="text/css" />
}
<div class="container" style="margin-top: 8%;">
    <div class="col-md-6">
        <div class="row">
            <div id="logo" class="text-center">
                <h4>Digite aqui o CPF/CNPJ do Cooperado</h4>
            </div>
            <form asp-controller="AnaliseCredito" asp-action="Index" method="get" role="form" id="form-buscar">
                <div class="form-group">
                    <div class="input-group">
                        <input id="1" class="form-control" type="text" asp-for="identificador" name="search" placeholder="Buscar..." required />
                        <span class="input-group-btn">
                            <button class="btn btn-success" type="submit">
                                <i class="glyphicon glyphicon-search" aria-hidden="true"></i> Buscar
                            </button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>